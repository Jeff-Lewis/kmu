<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron">
    <h1>Welcome to ProMIS</h1>
    <p>keeps your initiatives under control...</p> 
    <br>
    <%= form_tag (users_login_path method: :POST) do %>
      <div class="form-group">
        <%= label_tag "email" %><br/>
        <%= email_field_tag :userid, nil, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag "password" %><br/>
        <%= password_field_tag :password, nil, class:"form-control"%>
      </div>
      <br/>
      <p><%= $error_message %></p>
      <br>
      <div class="actions">
            <%= button_to "Login",  users_login_path, class:"btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>  
</div>