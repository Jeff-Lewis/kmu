<div class="container-fluid">
	<div class="row">
    <div class="col-md-12">
      <div class="panel-heading header">
        <% if @ticket != nil %>
          <%   ticket_id = @ticket.id %>
        <% else %>
          <% ticket_id = nil %>
        <% end %>
        <h1>
		    <%= link_to url_for(@controller_name), :search_domain => @search_domain, :page => session[:page] do %>
          <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
        <% end %>
		    <%= link_to new_search_path(:user_id => current_user.id, :search_domain => @search_domain, :controller_name => @controller_name, :ticket_id => ticket_id) do %>
          <i class="btn btn-primary btn-lg glyphicon glyphicon-plus"></i>
        <% end %>
        SUCHEN <%= @search_domain %>
        <% if @ticket != nil %>
          f√ºr <%= @ticket.sponsor.event.name + " " + @ticket.name %>
        <% end %>
        <span class="badge"><%= @seranz %></span>
        </h1>
      </div>
    </div>
  </div>
  <br>

	<div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
    		<!--<table class="table table-striped table-hover-->
    		<table class="table table-striped">
          <thead>
            <tr>
              <td colspan="3">
                <div class="digg_pagination">
                    <%= will_paginate @searches, :container => false, previous_label: "<", next_label: ">" %>
                </div>	  
              </td>
            </tr>
            
            <tr>
              <th></th>
              <th>Bezeichnung</th>
              <th>Beschreibung</th>
              <th>Datum</th>
              <th>Anzahl</th>
            </tr>
          </thead>
        
          <tbody>
            <% @searches.each do |s| %>
              <tr>
                <td>
                <% case s.search_domain %>
                <% when "Tickets" %>
                  <% if s.ticket_id != nil %>
                    <% @ticket = Ticket.find(s.ticket_id) %>
                    <%= link_to tickets_path :sponsor_id => @ticket.sponsor.id do %>
                      <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                    <% end %>
                  <% end %>
                <% when "Privatpersonen" %>
                  <%= link_to users_path :filter_id => s.id do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Institutionen" %>
                  <%= link_to companies_path :filter_id => s.id do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Angebote", "Aktionen" %>
                  <%= link_to offer_index_path :filter_id => s.id  do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Mobilien" %>
                  <%= link_to vehicles_path :filter_id => s.id  do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Ausschreibungen" %>
                  <%= link_to bids_path :filter_id => s.id  do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Kleinanzeigen" %>
                  <%= link_to requests_path :filter_id => s.id , :rtype => s.rtype do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Stellenanzeigen" %>
                  <%= link_to jobs_path :filter_id => s.id do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Veranstaltungen" %>
                  <%= link_to events_path :filter_id => s.id  do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Sehenswuerdigkeiten" %>
                  <%= link_to hotspots_path :filter_id => s.id do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% when "Spendeninitiativen" %>
                  <%= link_to donations_path :filter_id => s.id  do %>
                    <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
                  <% end %>
                <% end %>
      	        <%= link_to edit_search_path(s, :ticket_id => ticket_id) do %>
                  <i class="btn btn-primary btn-lg glyphicon glyphicon-wrench"></i>
                <% end %>
      	        <%= link_to s, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="btn btn-danger btn-lg glyphicon glyphicon-trash"></i>
                <% end %>
                </td>
                <td>
                  <anzeigetext>
                    <%= s.name %><br>
                  </anzeigetext>
                </td>
                <ntext>
                <td><%= s.description %></td>
                <td><%= s.updated_at.strftime("%d.%m.%Y um %T Uhr") %></td>
                <td><%= s.counter %></td>
                </ntext>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
  </div>
</div>