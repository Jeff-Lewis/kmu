<div class="container-fluid">
  <%= form_for sendmail_path, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <b>eMail</b>
                </div>
                <div class="panel-body">
                  <% if @request_detail.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@request_detail.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @request_detail.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Detail" %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "Beschreibung" %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label "Photo" %><br/>
                     <%= image_tag @request_detail.avatar.url(:big) %>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :avatar, class:"form-control" %>
                  </div>
                  <div>
                      <%= f.hidden_field :request_id, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
            <%= link_to request_detail_path(:request_id => @request_detail.request_id) do %>
              <i class="btn btn-default btn-lg glyphicon glyphicon-list">Zur√ºck</i>
            <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>