<div class="container-fluid">
    <%= form_for @hs_rating do |f| %>

        <% if @hs_rating.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@hs_rating.errors.count, "error") %> prohibited this rating from being saved:</h2>
              <ul>
                  <% @hs_rating.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to @hs_rating.hotspot do %>
                        <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
                      <% end %>
                      BEWERTUNG <%= @hs_rating.hotspot.name %>
                      </li_header>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
              <div class="col-md-6">
                  <div class="panel-body">
                    <div class="form-group">
                      <%= f.label "Bewertung" %><br/>
                      <% for i in 1..5 %>
                          <%= f.radio_button :user_rating, i.to_i %>
                          <% i.times do %>
                            <% image_tag("rating_star.jpg", :size => "50x50" , class:"img-rounded") %>
                            <i class="glyphicon glyphicon-star"></i>
                          <% end %><br>
                      <% end %><br>
                      <%= f.label "Kommentar" %><br/>
                      <%= f.text_area :user_comment, rows: 3, class:"form-control"%>
                    </div>
                     <%= f.hidden_field :user_id, class:"form-control" %>
                     <%= f.hidden_field :hotspot_id, class:"form-control" %>
                     <%= f.hidden_field :created_at, class:"form-control" %>
                    <div class="actions">
                      <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>