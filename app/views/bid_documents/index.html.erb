<p id="notice"><%= notice %></p>

<h1>Listing Bid Documents</h1>

<table>
  <thead>
    <tr>
      <th>Bid</th>
      <th>Company</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_documents.each do |bid_document| %>
      <tr>
        <td><%= bid_document.bid_id %></td>
        <td><%= bid_document.company_id %></td>
        <td><%= bid_document.name %></td>
        <td><%= bid_document.description %></td>
        <td><%= bid_document.status %></td>
        <td><%= link_to 'Show', bid_document %></td>
        <td><%= link_to 'Edit', edit_bid_document_path(bid_document) %></td>
        <td><%= link_to 'Destroy', bid_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

