
  <div class="row">
    <action>
    <%= action_buttons("Job", @job, @topic) %>
    </action>
  </div>

  <div class="row">
    <header>
    <%= header("Stellenanzeige " + @job.name, true) %>
    </header>
  </div>
  
  <div class="row">
      <div class='col-xs-2'>
        <%= navigate("Job", @job) %>
      </div>
      <div class='col-xs-10'>

      <% case @topic %>
        <% when "Jobinformation" %>
          <%= header("Informationen", false) %>
          <div class="panel-body">
            <%= link_to @job.company do %>
      				<% if @job.company.avatar_file_name == nil %>
                <%= image_tag("company_a.png", :size => "200x200", class:"img-rounded" ) %>
              <% else %>
                <%= image_tag @job.company.avatar(:medium), class:"img-rounded"  %>
              <% end %>
            <% end %>
            <br><br>
            <% if @job.date_from != nil or @job.date_to != nil %>
              <b>Datum von-bis:</b><br>
              <%= @job.date_from if @job.date_from != nil %>
              <%= @job.date_to if @job.date_to != nil %>
              <br><br>
            <% end %>
            <b>aufgegeben von:</b><br>
            <%= @job.company.name %><br>
            <%= @job.company.category.name %><br>
            <% if @job.company.homepage != nil %>
                <%= link_to url_with_protocol(@job.company.homepage), :target => '_blank' do %>
                  <i class="glyphicon glyphicon-home"></i> <%= url_with_protocol(@job.company.homepage) %>
                <% end %>
            <% end %>
            <br><br>
            <%= @job.created_at.strftime("%d.%m.%Y") %>
          </div>
      
        <% when "Jobdetail" %>
          <%= header("Stellenanzeige", false) %>
          <div class="panel-body">
            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="thumbnail" align="center">
                <anzeigetext>
      						Ihre Aufgaben
                </anzeigetext>
                <p>
                  <ntext>
      						<%= @job.tasks %>
      						</ntext>
      					</p>
              </div>
            </div>
            
            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="thumbnail" align="center">
                <anzeigetext>
      						wir erwarten
                </anzeigetext>
                <p>
                  <ntext>
      						<%= @job.skills %>
      						</ntext>
      					</p>
              </div>
            </div>
    
            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="thumbnail" align="center">
                <anzeigetext>
      						wir bieten
                </anzeigetext>
                <p>
                  <ntext>
      						<%= @job.offers %>
      						</ntext>
      					</p>
              </div>
            </div>
    
            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="thumbnail" align="center">
                <anzeigetext>
      						Ihr Kontakt
                </anzeigetext>
                <p>
                  <ntext>
      						<%= @job.contacts %>
      						</ntext>
      					</p>
              </div>
            </div>
          </div>

      <% end %>
    </div>
  </div>

