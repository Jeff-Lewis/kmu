<div class="container-fluid">
	
	<div class="row">
    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
            <h1>Kleinanzeige Details <%= @request.name %></h1>
            <%= link_to requests_path :rtype => @request.rtype, :page => session[:page] do %>
              <i class="btn btn-primary glyphicon glyphicon-list"></i>
            <% end %>
            <%= link_to new_request_detail_path do %>
              <i class="btn btn-default glyphicon glyphicon-plus"></i>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <h3><%= @request.name %></h3>
      <%= @request.description %><br><br>
      <b>Weitere Details</b><br><br>
    </div>
  </div>

	<div class="row">
    <% if @request_details.count > 0 %>
      <% @request_details.each do |rd| %>
        <div class="col-md-3">
      		<div class="thumbnail" align="center">
            <% if !rd.avatar_file_name %>
              <%= image_tag("service_a.png", :size => "500x500", class:"img-rounded" ) %>
            <% else %>
              <%= image_tag rd.avatar(:medium), class:"img-rounded"  %>
            <% end %>
  					<div class="caption">
  						<h3>
  							<%= rd.name %>
  						</h3>
  						<p>
                <b>Beschreibung</b>
  						  <%= rd.description %>
  						</p>
  					</div>
  	        <%= link_to edit_request_detail_path(rd) do %>
              <i class="btn btn-default glyphicon glyphicon-wrench"></i>
            <% end %>
  	        <%= link_to rd, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="btn btn-danger glyphicon glyphicon-trash"></i>
            <% end %>
  			   </div>
  			 </div>
      <% end %>
    <% end %>
  </div>

</div>