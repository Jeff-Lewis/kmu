<h1>Rights#show</h1>
<p>Find me in app/views/rights/show.html.erb</p>

<%= form_for (rights_showRights_path method: :POST) do |f| %>

<div class="container-fluid">
    <div class="row">

        <div class="col-md-9">
            <div class="panel panel-primary">
                <div class="panel-heading">
                  <h1>access rights for company</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>company user</h1>
                    <%= select_tag "company_user", options_from_collection_for_select(@c_user, "id", "userid"), {class: "form-control", multiple: true, size:34} %>
                </div>
            </div>
        </div>
        
        <div class="col-md-1">
            <div class="actions">
              <%= f.button ">>", class:"btn btn-default", name:"subaction", value:"delete" %>
            </div>
            <div class="actions">
              <%= f.button "<<", class:"btn btn-default", name:"subaction", value:"add" %>
            </div>
            <div class="form-group">
              <%= f.check_box :super, class:"form-control"%>
              <%= f.label "Super" %>
            </div>
        </div>
            
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>ProMIS user</h1>
                    <%= select_tag "promis_user", options_from_collection_for_select(@p_user, "id", "userid"), {class: "form-control", multiple: true, size:34} %>
                </div>
            </div>
        </div>
    </div>
        
    <div class="row">
        <div class="col-md-4">
            <div class="actions">
              <%= f.button "Save",  class:"btn btn-primary btn-lg"%>
            </div>
        </div>
    </div>        

</div>

<% end %>
