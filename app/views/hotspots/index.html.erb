<div class="container-fluid">

    <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <div class="digg_pagination">
    		    <% if user_signed_in? %>
  		        <%= link_to searches_path :search_domain => "Sehenswuerdigkeiten", :controller_name => controller_name do %>
  		          <i class="btn btn-primary btn-xs glyphicon glyphicon-filter"></i>
  		        <% end %>
    		    <% end %>
            <%= will_paginate @hotspots, :container => false, previous_label: "<", next_label: ">" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
      <%= header("Ausflugsziele " + "<span class='badge'>" + @hsanz.to_s + "</span>", true) %>
  </div>

  <%= build_medialist("col-sm-6 col-md-4 col-lg-3",@hotspots,"hotspots", true) %>
  <br>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
          <div id="map"></div>
      </div>
    </div>
  </div>

  <% if 1>2 %>
	<div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
    		<!--<table class="table table-striped table-hover-->
    		<table class="table table-striped">
          <thead>
            <tr>
              <td colspan="3">
                <div class="digg_pagination">
                    <%= will_paginate @hotspots, :container => false, previous_label: "<", next_label: ">" %>
                </div>	  
              </td>
            </tr>
            
            <tr>
              <th>Bewertung</th>
              <th colspan="3">Sehensw√ºrdigkeit/Ausflugsziel</th>
            </tr>
          </thead>
        
          <tbody>
            <% @hotspots.each do |h| %>
              <tr>
                <td>
                  <% HsRating.avg_rating(h).to_i.times do %>
                      <% image_tag("rating_star.jpg", :size => "50x50" , class:"img-rounded") %>
                      <i class="glyphicon glyphicon-star"></i>
                  <% end %><br>
                </td>
                <td>
                  <%= link_to h do %>
                    <% if h.hotspot_details != nil %>
                      <%= carousel(h.hotspot_details, "thumb") %>
                    <% else %>
                      <%= image_tag("hotspot_a.png", :size => "100x100", class:"img-rounded") %>
                		<% end %>
                	<% end %>
                </td>
                <td>
                  <anzeigetext>
                    <%= h.name %>
                  </anzeigetext><br>
                  <ntext>
                  <% if h.user_id != nil %>
                    <%= h.user.name + " " + h.user.lastname %>
                  <% end %>
                  </ntext>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  
    <div class="col-md-6">
      <div id="map">
      </div>
    </div>

  </div>
  <% end %>
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
});
</script>