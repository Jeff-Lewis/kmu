<div class="container-fluid">
    <%= form_for @customer do |f| %>

        <% if @customer.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                  <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <h2>
                      <%= link_to @customer do %>
                        <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
                      <% end %>
                      KUNDEN-Nr
                      </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="panel-body">
                    <div class="form-group">
                       <%= f.label "Kundennummer" %><br/>
                       <%= f.text_field :customer_number, class:"form-control" %>
                    </div>
                     <%= f.hidden_field :user_id, class:"form-control" %>
                     <%= f.hidden_field :company_id, class:"form-control" %>
                    <div class="actions">
                      <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
            </div>
                
        </div>
    <% end %>
</div>
