<div class="container-fluid">
	<div class="row">
    <div class="col-md-12">
      <div class="panel-heading header">
        <h1>
		    <% if user_signed_in? %>
		        <%= link_to searches_path :search_domain => "Ausschreibungen", :controller_name => controller_name do %>
		          <i class="btn btn-primary btn-lg glyphicon glyphicon-filter"></i>
		        <% end %>
		    <% end %>
        AUSSCHREIBUNGEN
        <span class="badge"><%= @bidanz %></span>
        <%= link_to bids_path(:page => session[:page], :dir => "<")  do %>
          <i class="btn btn-primary btn-lg glyphicon glyphicon-chevron-left"></i>
        <% end %>
        KW <%= session[:cw].to_s + " / " + session[:year].to_s %>
        <%= link_to bids_path(:page => session[:page], :dir => ">")  do %>
          <i class="btn btn-primary btn-lg glyphicon glyphicon-chevron-right"></i>
        <% end %>
        </h1>
      </div>
    </div>
  </div>
	<div class="row">
    <div class="col-md-12">
  		<table class="table table-striped">
        <thead>
          <tr>
            <td colspan="13">
              <div class="digg_pagination">
                  <%= will_paginate @bids, :container => false, previous_label: "<", next_label: ">" %>
              </div>	  
            </td>
          </tr>
          <tr>
            <th colspan="2">Ausschreibung</th>
            <% for i in 0..6 %>
              <th>
                <%= $wochentage[i] %><br>
                <%= (@start+i).strftime("%d-%m-%y") %>
              </th>
            <% end %>
          </tr>
        </thead>
        
        <tbody>

            <% @bids.each do |b| %>

              <tr>
    				    <td>
    				    <%= link_to b do %>
    				      <% if b.bid_details.first != nil %>
                    <% if !b.bid_details.first.avatar_file_name %>
                      <%= image_tag("bid_a.png", :size => "50x50" , class:"img-rounded") %>
                    <% else %>
                      <%= image_tag b.bid_details.first.avatar(:small), class:"img-rounded" %>
                    <% end %>
                  <% else %>
                      <%= image_tag("bid_a.png", :size => "50x50" , class:"img-rounded") %>
                  <% end %>
                <% end %>
                </td>
                <td>
                  <%= link_to b do %>
                    <div class="anzeigetext">
                      <%= b.name %><br>
                    </div>
                    <% if b.user_id != nil %>
                      <%= b.user.name + " " + b.user.lastname %>
                    <% end %>
                    <%= b.date_from.strftime("%d.%m") %>-<%= b.date_to.strftime("%d.%m") %>
                  <% end %>
                </td>
                <% for i in 0..6 %>
                    <% if BidDatum(@start+i,b) %>
                      <td class="blocked">
                    <% else %>
                      <td class="free">
                    <% end %>
                    </th>
                <% end %>
              </tr>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>
  
	<div class="row">
    <div class="col-md-12">
      <div id="map">
      </div>
    </div>
  </div>
    
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
});
</script>