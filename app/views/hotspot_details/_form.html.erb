<div class="container-fluid">
  <%= form_for @hotspot_detail, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <h2>
                <%= link_to @hotspot_detail.hotspot do %>
                  <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
                <% end %>
                  ZUSATZINFORMATION <%= @hotspot_detail.hotspot.name %>
                </div>
                </h2>
                <div class="panel-body">
                  <% if @hotspot_detail.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@hotspot_detail.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @hotspot_detail.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Bezeichnung" %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "Beschreibung" %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label "Photo" %><br/>
                     <%= image_tag @hotspot_detail.avatar.url(:big) %>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :avatar, class:"form-control" %>
                  </div>
                  <div>
                      <%= f.hidden_field :hotspot_id, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>