<p id="notice"><%= notice %></p>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= form_tag (stats_ressource_path method: :POST) do %>
                      <div class="form-group">
                        <%= label_tag "starting date" %>
                        <%= text_field_tag :starting_date, @starting_date, class:"form-control"%>
                      </div>
                      <div class="form-group">
                        <%= label_tag "ending date" %>
                        <%= text_field_tag :ending_date, @ending_date, class:"form-control"%>
                      </div>
                      <div class="form-group">
                          <%= select_tag "period", options_for_select(@period_options, @period), class:"form-control", :onchange => "this.form.submit();" %>
                      </div>
                      <div class="form-group">
                        <%= select_tag "company_id", options_from_collection_for_select(@companies, "id", "name", @company_id), class: "form-control" %>
                      </div>
                      <div class="actions">
                            <%= button_to "Update Chart", stats_ressource_path(:period => @period, :company_id => @company_id, :user_id => @user_id, :data => "UpdateChart"), class:"btn btn-primary" %>
                      </div>
                      <div class="actions">
                            <%= button_to "Export Excel", stats_ressource_path(:period => @period, :company_id => @company_id, :user_id => @user_id, :data => "WriteExcel"), class:"btn btn-default" %>
                      </div>
                    <% end %>
                    <% if @filename != nil %> 
                      <%= link_to @filename, @filename.remove("public") %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
          <% if @tt1 != nil %>
                <h1><%= @tt1.sum(:amount).to_s + " hours reported" %></h1>
                <%= content_tag :div, "", id: "reports_chart", data: {reports: @tt1} %>
          <% end %>
        </div>
    </div>
</div>
