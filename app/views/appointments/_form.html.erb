
    <%= form_for @appointment do |f| %>

        <% if @appointment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this calender from being saved:</h2>
              <ul>
                  <% @appointment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to appointments_path :user_id1 => @appointment.user_id1 do %>
                        <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
                      <% end %>
                      <% @user = User.find(@appointment.user_id1) %>                      
                      Termineintrag <%= @user.name + " " + @user.lastname %>
                      </li_header>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                    <div class="form-group">
                      <%= f.label "Betreff" %><br/>
                      <%= f.text_field :subject, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "am" %><br/>
                      <%= f.text_field :app_date, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Zeit" %><br/>
                      <%= f.number_field :time_from, class:"form-control"%>
                      <%= f.number_field :time_to, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Kommunikationskanal" %><br/>
                      <%= f.select :channel, options_for_select(["GeschÃ¤ftsstelle", "Treffpunkt", "Wohnort Berater", "Wohnort Kunde", "Telefon", "VideoChat"]), {}, class:"form-control" %>
                      <%= f.text_field :channel_detail, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Erinnerung" %>
                      <%= f.check_box :reminder, class:"form-control"%>
                    </div>
                     <%= f.hidden_field :user_id1, class:"form-control" %>
                     <%= f.hidden_field :user_id2, class:"form-control" %>
                     <%= f.hidden_field :active, class:"form-control" %>
                     <%= f.hidden_field :status, class:"form-control" %>
                    <div class="actions">
                       <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>                
