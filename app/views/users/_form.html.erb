<div class="container-fluid">
    <%= form_for @user, html: {multipart: true}  do |f| %>

        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <%= link_to users_path do %>
                        <i class="btn btn-primary glyphicon glyphicon-list"></i>
                      <% end %>
                      <b>user data</b>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="panel-body">
                <div class="col-md-6">
    
                    <div class="form-group">
                      <%= f.label "email" %><br/>
                      <%= f.text_field :email, :readonly=> true, class:"form-control"%>
                    </div>
                    <!--<%= f.hidden_field :password %>-->
                    <div class="form-group">
                      <%= f.label "lastname" %><br/>
                      <%= f.text_field :lastname, autofocus: true, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "name" %><br/>
                      <%= f.text_field :name, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "organisation" %>
                      <%= f.text_field :org, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "title" %>
                      <%= f.text_field :title, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "active" %>
                      <%= f.check_box :active, class:"form-control"%>
                    </div>
                    <div class="form-group">
                       <%= f.label "image" %><br/>
                       <%= image_tag @user.avatar.url(:medium) %>
                       <%= f.file_field :avatar, class:"form-control" %>
                    </div>
                    <div class="form-group">
                       <%= f.label "adress" %><br/>
                       <%= f.text_field :address1, class:"form-control" %>
                       <%= f.text_field :address2, class:"form-control" %>
                       <%= f.text_field :address3, class:"form-control" %>
                    </div>
                    <div class="form-group">
                       <%= f.label "phone" %><br/>
                       <%= f.text_field :phone1, class:"form-control" %>
                       <%= f.text_field :phone2, class:"form-control" %>
                    </div>
                    <div class="form-group">
                       <%= f.label "default cost rate" %><br/>
                       <%= f.number_field :costrate, class:"form-control" %>
                    </div>
                    <div class="form-group">
                       <%= f.label "cost information" %><br/>
                       <%= f.text_field :costinfo1, class:"form-control" %>
                       <%= f.text_field :costinfo2, class:"form-control" %>
                    </div>
                     <%= f.hidden_field :geo_address, class:"form-control" %>
                     <%= f.hidden_field :longitude, class:"form-control" %>
                     <%= f.hidden_field :latitude, class:"form-control" %>
                    <div class="actions">
                      <%= f.submit "Save",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div id="map">
                      <div id="map-canvas"></div>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers([
        {
          "lat": <%= @user.latitude %>,
          "lng": <%= @user.longitude %>,
          "infowindow": "text",
        }
      ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.setMapTypeId(google.maps.MapTypeId.SATELLITE);
});
</script>
