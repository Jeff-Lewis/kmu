
	
	<div class="row">
    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
            <h1>Spendeninitiative Details <%= @donation.name %></h1>
            <%= link_to donations_path :page => session[:page] do %>
              <i class="btn btn-primary glyphicon glyphicon-list"></i>
            <% end %>
            <%= link_to new_donation_detail_path :donation_id => @donation.id do %>
              <i class="btn btn-default glyphicon glyphicon-plus"></i>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <h3><%= @donation.name %></h3>
      <%= @donation.description %><br><br>
      <b>Weitere Details</b><br><br>
    </div>
  </div>

	<div class="row">
	  <% if @donation_details %>
      <% @donation_details.each do |dd| %>
        <div class="col-md-3">
      		<div class="thumbnail" align="center">
            <% if !dd.avatar_file_name %>
              <%= image_tag("donate_a.jpg", :size => "500x500", class:"img-rounded" ) %>
            <% else %>
              <%= image_tag dd.avatar(:medium), class:"img-rounded"  %>
            <% end %>
  					<div class="caption">
  						<h3>
  							<%= dd.name %>
  						</h3>
  						<p>
                <b>Beschreibung</b>
  						  <%= dd.description %>
  						</p>
  					</div>
  	        <%= link_to edit_donation_detail_path(dd) do %>
              <i class="btn btn-default glyphicon glyphicon-wrench"></i>
            <% end %>
  	        <%= link_to dd, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="btn btn-danger glyphicon glyphicon-trash"></i>
            <% end %>
  			   </div>
  			 </div>
      <% end %>
    <% end %>
  </div>
