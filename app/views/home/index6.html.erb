<h1>Hello</h1>

<link rel="stylesheet" href="dist/switchery.css" />
<script src="dist/switchery.js"></script>

<input type="checkbox" id="check1", class="js-switch" checked />

    <%= form_for @user, html: {multipart: true}  do |f| %>

        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-12">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to @user do %>
                        <i class="btn btn-primary btn-lg glyphicon glyphicon-list"></i>
                      <% end %>
                      ACCOUNT
                      </li_header>
                    </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                    <div class="form-group">
                       <%= f.label "Photo" %><br/>
                       <%= image_tag @user.avatar.url(:medium) %><br>
                       <%= f.file_field :avatar, class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label "Email" %><br/>
                      <%= f.text_field :email, :readonly => true, class:"form-control"%>
                    </div>
                    <!--<%= f.hidden_field :password %>-->
                    <div class="form-group">
                      <%= f.label "Nachname" %><br/>
                      <%= f.text_field :lastname, :id => "u_lastname", autofocus: true, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Vorname" %><br/>
                      <%= f.text_field :name, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Geburtsdatum" %><br/>
                      <%= f.text_field :dateofbirth, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Aktiv" %><input type="checkbox" id="check1", class="js-switch" checked />
                      <%= f.check_box :active, :id => "u_active", class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label "Anonym" %>
                      <%= f.check_box :anonymous, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Kalender" %>
                      <%= f.check_box :calendar, class:"form-control"%>
                    </div>
                    <div class="form-group">
                       <%= f.label "Kalender von-bis" %><br/>
                       <%= f.number_field :time_from, class:"form-control" %>
                       <%= f.number_field :time_to, class:"form-control" %>
                    </div>
                    <% if current_user.superuser %>
                        <div class="form-group">
                          <%= f.label "Webmaster" %>
                          <%= f.check_box :webmaster, class:"form-control"%>
                        </div>
                    <% end %>
                    <div class="form-group">
                       <%= f.label "Adresse" %><br/>
                       <%= f.text_field :address1, class:"form-control" %>
                       <%= f.text_field :address2, class:"form-control" %>
                       <%= f.text_field :address3, class:"form-control" %>
                    </div>
                    <div class="form-group">
                       <%= f.label "Telefon" %><br/>
                       <%= f.text_field :phone1, class:"form-control" %>
                       <%= f.text_field :phone2, class:"form-control" %>
                    </div>
                     <%= f.hidden_field :geo_address, class:"form-control" %>
                     <%= f.hidden_field :longitude, class:"form-control" %>
                     <%= f.hidden_field :latitude, class:"form-control" %>
                    <div class="actions">
                      <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
            </div>
                
            <div class="col-md-6">
                <div class="panel-body">
                    <div id="map">
                      <div id="map-canvas"></div>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>


<script>
$(document).ready(function(){
    var elem = document.querySelector('.js-switch');
    var init = new Switchery(elem,{color: '#41b7f1', size:'large'});
})
</script>

<script>
$(document).ready(function(){
    $('#check1').change(function(){
        // alert("Schalter ist auf " + document.getElementById('check1').checked);
        if ((document.getElementById('check1').checked) == true)
            { 
                $("#u_lastname").val("checked");
                $("#u_active").prop('checked', true);
            }
        else 
            { 
                $("#u_lastname").val("unchecked"); 
                $("#u_active").prop('checked', false);
            }
    });
})
</script>