<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% if user_signed_in? %>

    <%= form_tag(home_index_path method: :POST) do %>
      <div class="form-group">
        <%= text_field_tag :message, @message, class:"form-control" %>
      </div>
      <div class="actions">
          <%= submit_tag "Submit", class:"btn btn-warning" %>
      </div>
    <% end %>
    
<% end %>