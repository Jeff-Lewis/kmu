<p id="notice"><%= notice %></p>

<div class="container-fluid">
	<div class="row">
    <div class="col-md-12">
      <h1>Listing Accesses to <%= $workorder_name %></h1>
      <%= link_to users_choose_a_user_path(:workorder_name => $workorder_name, :workorder_id => $workorder_id) do %>
        <i class="btn btn-primary glyphicon glyphicon-plus"></i>
      <% end %>
      <br>
			<table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>email</th>
            <th>name</th>
            <th>costrate</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @accesses.each do |access| %>
            <tr>
              <td>
                <% if !access.user.avatar_file_name %>
                  <%= image_tag("ma_anonym.png", :size => "50x50") %>
                <% else %>
                  <%= image_tag access.user.avatar(:small) %>
                <% end %>
              </td>
              <td><%= access.user.userid %></td>
              <td><%= access.user.lastname + " " + access.user.name %></td>
              <td><%= access.costrate %></td>
              <td>
                <ul class="nav nav-pills">
      				    <li>
      				        <%= link_to access do %>
                        <i class="btn btn-info glyphicon glyphicon-info-sign"></i>
                      <% end %>
      				    </li>
      	          <li>
      				        <%= link_to edit_access_path(access) do %>
                        <i class="btn btn-primary glyphicon glyphicon-wrench"></i>
                      <% end %>
      				    </li>
          	      <li>
      				        <%= link_to access, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="btn btn-danger glyphicon glyphicon-trash"></i>
                      <% end %>
      				    </li>
      			    </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>