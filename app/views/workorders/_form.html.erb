<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                  <h1>workorder</h1>

                  <ul class="nav nav-pills">
                    <li class="active">
                        <%= link_to @workorder do %>
                          <i class="glyphicon glyphicon-info-sign"></i> Show
                        <% end %>
                     </li>
                    <li>
                        <%= link_to workorders_path do %>
                          <i class="glyphicon glyphicon-list"></i> List
                        <% end %>
                     </li>
                  </ul>                  
                  
                </div>
                <div class="panel-body">
                  <%= form_for @workorder, html: {multipart: true}  do |f| %>
                    <% if @workorder.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@workorder.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                  
                        <ul>
                        <% @workorder.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                  
                      <div class="form-group">
                        <%= f.label "Workorder" %><br/>
                        <%= f.text_field :name, autofocus: true, class:"form-control"%>
                      </div>
                      <div class="form-group">
                        <%= f.label "active" %>
                        <%= f.check_box :active, class:"form-control"%>
                      </div>
                      <div class="form-group">
                         <%= f.label "Responsibility" %><br/>
                         <%= f.select :user_id, User.all.collect { |u| [u.userid, u.id] }, {}, {class: "form-control"} %>
                      </div>
                      <div class="form-group">
                        <%= f.label "Description" %><br/>
                        <%= f.text_area :description, rows: 5, class:"form-control"%>
                      </div>
                      <div class="form-group">
                         <%= f.label "Logo" %><br/>
                         <%= f.file_field :avatar, class:"form-control" %>
                      </div>
                      <div class="form-group">
                         <%= f.label "Adress" %><br/>
                         <%= f.text_field :adress1, class:"form-control" %>
                         <%= f.text_field :adress2, class:"form-control" %>
                         <%= f.text_field :adress3, class:"form-control" %>
                      </div>
                      <div class="form-group">
                         <%= f.label "Phone" %><br/>
                         <%= f.text_field :phone1, class:"form-control" %>
                         <%= f.text_field :phone2, class:"form-control" %>
                      </div>
                      <div class="form-group">
                         <%= f.label "Cost Information" %><br/>
                         <%= f.text_field :costinfo1, class:"form-control" %>
                         <%= f.text_field :costinfo2, class:"form-control" %>
                      </div>
                      <br/>
                      
                      <%= f.hidden_field :parent_id, class:"form-control" %>
                         
                     <div class="actions">
                      <%= f.submit "Save",  class:"btn btn-primary btn-lg"%>
                    </div>
                  <% end %>
                </div>
                <div class="panel-footer">
                    <p id="notice"><%= notice %></p>
                </div>
          </div>
      </div>
  </div>
</div>
