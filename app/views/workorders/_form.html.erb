<div class="container-fluid">
  <%= form_for @workorder, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
              
                <div class="panel-heading">
                  <%= link_to workorders_path(:parent_id => @workorder.parent_id) do %>
                    <i class="btn btn-primary glyphicon glyphicon-list"></i>
                  <% end %>
                  <b>workorder data</b>
                </div>
                
                <div class="panel-body">
                  <% if @workorder.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@workorder.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @workorder.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  
                  <% if $current_parent_id.to_i == 0 %>
                      <div class="form-group">
                        <%= f.label "Company" %><br/>
                        <%= f.select :company_id, Company.where("user_id=?", $logon_user_id).collect { |c| [c.name, c.id] }, {}, {class: "form-control"} %>
                      </div>
                  <% else %>
                        <%= f.hidden_field :company_id, class:"form-control" %>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Workorder" %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "active" %>
                    <%= f.check_box :active, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label "Responsibility" %><br/>
                     <%= f.select :user_id, User.all.collect { |u| [u.userid, u.id] }, {}, {class: "form-control"} %>
                  </div>
                  <div class="form-group">
                    <%= f.label "Description" %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label "Logo" %><br/>
                     <%= f.file_field :avatar, class:"form-control" %>
                  </div>
                  <div class="form-group">
                     <%= f.label "Adress" %><br/>
                     <%= f.text_field :adress1, class:"form-control" %>
                     <%= f.text_field :adress2, class:"form-control" %>
                     <%= f.text_field :adress3, class:"form-control" %>
                  </div>
                  <div class="form-group">
                     <%= f.label "Phone" %><br/>
                     <%= f.text_field :phone1, class:"form-control" %>
                     <%= f.text_field :phone2, class:"form-control" %>
                  </div>
                  <div class="form-group">
                     <%= f.label "Cost Information" %><br/>
                     <%= f.text_field :costinfo1, class:"form-control" %>
                     <%= f.text_field :costinfo2, class:"form-control" %>
                  </div>
                  <div>
                      <%= f.hidden_field :parent_id, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Save",  class:"btn btn-primary btn-lg"%>
            </div>
            <div class="panel-footer">
              <p id="notice"><%= notice %></p>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>