<p id="notice"><%= notice %></p>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= form_tag (workorders_report_path method: :POST) do %>
                      <div class="form-group">
                        <% label = "booking month " + $def_date.to_date.strftime("%B-%Y").to_s %> 
                        <%= label_tag label %>
                        <%= text_field_tag :reporting_date, $def_date, class:"form-control" %>
                      </div>
                      <div class="actions">
                            <%= button_to "Set", workorders_report_path, class:"btn btn-warning" %>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
                    
    <div class="row">
        <% @workorders.each do |wo| %>
            <div class="col-md-3">
			    <div class="thumbnail">
                       <% if !wo.avatar_file_name %>
                                <%= link_to image_tag("s_anonym.jpg", :size => "300x300"), new_timetrack_path(:user_id => $logon_user_id, :workorder_id => wo.id) %>
                        <% else %>
                                <%= link_to (image_tag wo.avatar(:medium)), new_timetrack_path(:user_id => $logon_user_id, :workorder_id => wo.id) %>
                      <% end %>
                      
			      <div class="caption">
  			         <blockquote>
			             <h3><%= link_to wo.name, wo %></h3>
    		             <p><%= wo.description %></p>
                     </blockquote>
                    <%= link_to new_timetrack_path(:user_id => $logon_user_id, :workorder_id => wo.id), class:"btn btn-primary btn-lg btn-block" do %>
                       <i class="glyphicon glyphicon-pencil"></i> Report
                    <% end %>
                    <%= link_to timetracks_path(:user_id => $logon_user_id, :workorder_id => wo.id, :bom => $bom, :eom => $eom), class:"btn btn-default btn-lg btn-block" do %>
                       <i class="glyphicon glyphicon-info-sign"></i><span class="badge pull-right"><%= anzahl(wo, $bom, $eom) %></span> Show
                    <% end %>
                </div>
               </div>
  	       </div>
  	    <% end %>
    </div>
    
    <div class="row">
         <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1><%= $def_date.to_date.strftime("%B-%Y").to_s + " " + $hours_reported.to_s + " hours reported" %></h1>
                    <%= content_tag :div, "", id: "reports_chart",  data: {reports: @tt} %>
                </div>
            </div>
        </div>
    </div>

</div>