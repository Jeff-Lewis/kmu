<p id="notice"><%= notice %></p>

<div class="container">
  <div class="jumbotron">
    <h1>Welcome to ProMIS</h1>
    <p>keeps your initiatives under control...</p>
    <br>
    <% if $user_ok == false %>
      <%= form_tag (user_login_login_path method: :POST) do %>
          <div class="form-group">
            <%= label_tag "email" %><br/>
            <%= email_field_tag :userid, @userid, class:"form-control"%>
          </div>
          <div class="form-group">
            <%= label_tag "password" %><br/>
            <%= password_field_tag :password, @password, class:"form-control"%>
          </div>
          <div class="form-group">
            <%= select_tag "company_id", options_from_collection_for_select(@comps, "id", "name", $company_id), {class: "form-control hidden"} %>
          </div>
        <br/>
        <p><%= $logon_error_message %></p>
        <br>
        <div class="actions">
              <%= button_to "Login", user_login_login_path, class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>
    <% else %>
      <%= form_tag (user_login_login_path method: :POST) do %>
          <div class="form-group">
            <%= label_tag "email" %><br/>
            <%= email_field_tag :userid, @userid, :readonly=>true,  class:"form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag "password" %><br/>
            <%= password_field_tag :password, @password, :readonly=>true, class:"form-control"%>
          </div>
          <div class="form-group">
            <%= select_tag "company_id", options_from_collection_for_select(@comps, "id", "name", $company_id), {class: "form-control"} %>
          </div>
        <br/>
        <p><%= $logon_error_message %></p>
        <br>
        <div class="actions">
              <%= button_to "Login", user_login_login_path, class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= render("refs") %>
</div>