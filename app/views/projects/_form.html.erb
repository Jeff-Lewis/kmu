<%= form_for @project, html: {multipart: true}  do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label "Projektname" %><br/>
      <%= f.text_field :name, autofocus: true, class:"form-control"%>
    </div>
    <div class="form-group">
       <%= f.label "Verantwortlich" %><br/>
       <%= f.select :user_id, User.all.collect { |u| [u.userid, u.id] } %>
    </div>
    <div class="form-group">
      <%= f.label "Beschreibung" %><br/>
      <%= f.text_area :description, rows: 5, class:"form-control"%>
    </div>
    <div class="form-group">
       <%= f.label "Logo" %><br/>
       <%= f.file_field :avatar, class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Adresse" %><br/>
       <%= f.text_field :adress1, class:"form-control" %>
       <%= f.text_field :adress2, class:"form-control" %>
       <%= f.text_field :adress3, class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Telefon" %><br/>
       <%= f.text_field :phone1, class:"form-control" %>
       <%= f.text_field :phone2, class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Kostenstellen Info" %><br/>
       <%= f.text_field :costinfo1, class:"form-control" %>
       <%= f.text_field :costinfo2, class:"form-control" %>
    </div>
    <br/>

   <div class="actions">
    <%= f.submit "Update",  class:"btn btn-primary btn-lg"%>
  </div
  
<% end %>
