
  
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12">
          <div class="digg_pagination">
      		  <% if user_signed_in? %>
      		    <% if @dtype == "Donation" %>
    		        <%= link_to searches_path :search_domain => "Spendeninitiativen", :controller_name => controller_name do %>
    		          <i class="btn btn-primary btn-xs glyphicon glyphicon-filter"></i>
    		        <% end %>
    		      <% end %>
      		    <% if @dtype == "Reward" %>
    		        <%= link_to searches_path :search_domain => "Rewardinitiativen", :controller_name => controller_name do %>
    		          <i class="btn btn-primary btn-xs glyphicon glyphicon-filter"></i>
    		        <% end %>
    		      <% end %>
      		    <% if @dtype == "Loan" %>
    		        <%= link_to searches_path :search_domain => "Kreditinitiativen", :controller_name => controller_name do %>
    		          <i class="btn btn-primary btn-xs glyphicon glyphicon-filter"></i>
    		        <% end %>
    		      <% end %>
      		  <% end %>
            <%= will_paginate @donations, :container => false, previous_label: "<", next_label: ">" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% if @dtype == "Donation" %>
      <%= header("Crowdfunding Spenden " + "<span class='badge'>" + @donanz.to_s + "</span>", true) %>
    <% end %>
    <% if @dtype == "Reward" %>
      <%= header("Crowdfunding Belohnung " + "<span class='badge'>" + @donanz.to_s + "</span>", true) %>
    <% end %>
    <% if @dtype == "Loan" %>
      <%= header("Crowdfunding Kredit " + "<span class='badge'>" + @donanz.to_s + "</span>", true) %>
    <% end %>
  </div>
  
  <%= build_medialist("col-sm-6 col-md-4 col-lg-3", @donations, "donations", true) %>

